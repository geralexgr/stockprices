<Window x:Class="stockprices.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:stockprices"
        mc:Ignorable="d"
         Title="MainWindow" MinWidth="450" Width="700" Height="700" MinHeight="350">
   
    <Grid Background="#ededed">

        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock FontSize="18" Text="descr text HERE"  TextWrapping="Wrap" />
            <Button x:Name="graphBtn" Margin="0,30,0,0" Content="Plot stocks" Height="30" FontSize="18" Width="100" Click="graphBtn_Click" />
            <Button x:Name="algoBtn" Margin="0,10,0,0" Content="Find Correlation" Height="30" FontSize="18" Width="150" Click="algoBtn_Click" />
        </StackPanel>
    </Grid>
    
    
</Window>
